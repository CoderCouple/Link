<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".LinkApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_link_loupe"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_link_loupe_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.Link">
        <activity
            android:name=".ui.password_reset_flow.PasswordResetFlowActivity"
            android:exported="false" />
        <activity
            android:name=".ui.signin.SignInActivity"
            android:exported="false"
            android:theme="@style/Theme.Link.SignInActivity" />
        <activity
            android:name=".ui.signup.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".ui.welcome.WelcomeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.onboarding.OnBoardingActivity"
            android:exported="false" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="false"
            android:theme="@style/Theme.Link.SplashActivity"/>
        <activity
            android:name=".ui.landing.LandingActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.sample.MainActivity"
            android:exported="false" />
    </application>

</manifest>